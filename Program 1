//Best Time to Buy and Sell Stock
//https://leetcode.com/problems/best-time-to-buy-and-sell-stock/description/
class Solution {
public:
    int maxProfit(vector<int>& prices)
     {
        int lowest = prices[0]; 
        int max = 0;         
        for (int i = 1; i < prices.size(); i++)
        {
            if (prices[i] < lowest) 
            {
                lowest = prices[i];  
            } 
            else 
            {
                int profit = prices[i] - lowest;  
                if (profit > max) 
                {
                    max = profit;  
                }
            }
        }
        return max;
    }
};
